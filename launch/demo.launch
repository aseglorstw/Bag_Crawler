<?xml version="1.0" encoding="UTF-8" ?>
<launch>
    <arg name="bag" default="/home/robert/catkin_ws/src/bag_crawler/bagfiles/husky_2022-09-27-15-01-44.bag"/>
    <arg name="params" default="$(eval bag.split()[0] + '.params')"/>
    <arg name="rviz" default="true" doc="Launch RViz for data visualization or not."/>

    <param name="use_sim_time" value="true"/>
    <rosparam command="load" file="$(arg params)"/>

    <node name="rosbag_play" pkg="rosbag" type="play" args="--clock --rate 1.0 $(arg bag)"/>

    <node if="$(arg rviz)" name="rviz" pkg="rviz" type="rviz"
          args="-d $(find bag_crawler)/config/play.rviz"/>
</launch>
